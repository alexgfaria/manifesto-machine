#sliders(class='w3-panel')
  label(class='colored') Color
  input#range-val(
    type='range'
    min=0
    max=16777215
    value=0
    oninput='javascript:colorchange(this.value)'
  )
  label(class='colored') Font-Size 
  input#range-font(
    type='range'
    min=1
    max=8
    value=1
    oninput='javascript:fontSizeChange(this.value)'
  )
  label(class='colored') Line-Height
  input#range-height(
    type='range'
    min=0
    max=4
    value=1
    step=0.1
    oninput='javascript:lineHeightChange(this.value)'
  )
