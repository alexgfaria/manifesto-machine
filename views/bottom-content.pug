#sliders
  label(class='colored') Color
  input#range-val(
    type='range'
    min=0
    max=16777215
    value=0
    class='range'
  )
  br
  label(class='colored') Font-Size 
  input#range-font(
    type='range'
    min=1
    max=8
    value=1
    step=0.5
    class='range'
  )
  br
  label(class='colored') Line-Height
  input#range-height(
    type='range'
    min=0
    max=4
    value=1
    step=0.1
    class='range'
  )
  br
#selector
  select#font-select(class='w3-select reversed')
    each font in fonts
      option(style='font-family:'+font.family class='reversed')= font.family
